<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context="com.wyfinger.icleboir.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="3"
        android:rowCount="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPower"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/main_power"
            app:srcCompat="@drawable/ic_btn_power" />

        <ImageButton
            android:id="@+id/btnStart"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/main_start"
            app:srcCompat="@drawable/ic_btn_start" />

        <ImageButton
            android:id="@+id/btnUp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/main_up"
            app:srcCompat="@drawable/ic_btn_arrow_up" />

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/main_left"
            app:srcCompat="@drawable/ic_btn_arrow_left" />

        <ImageButton
            android:id="@+id/btnSelect"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/main_select"
            app:srcCompat="@drawable/ic_btn_select" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/main_right"
            app:srcCompat="@drawable/ic_btn_arrow_right" />

        <ImageButton
            android:id="@+id/btnDown"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@android:drawable/btn_default"
            android:contentDescription="@string/main_down"
            app:srcCompat="@drawable/ic_btn_arrow_down" />

        <Button
            android:id="@+id/btnMode"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="4"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_mode"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnClock"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="5"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_clock"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTimer"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="5"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_timer"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnBase"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="6"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_base"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnClimb"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="6"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_climb"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSpot"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="7"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_spot"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTurbo"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="7"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_turbo"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMax"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="7"
            android:background="@android:drawable/btn_default"
            android:text="@string/main_max"
            android:textAllCaps="false"
            android:textColor="@color/mainButtonsTextColor"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start|center_vertical"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:contentDescription="@string/about_title"
            android:paddingEnd="0dp"
            android:paddingStart="8dp"
            app:srcCompat="@drawable/ic_about" />

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="end|center_vertical"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:contentDescription="@string/scheduler_scheduler"
            android:paddingEnd="8dp"
            android:paddingStart="0dp"
            app:srcCompat="@drawable/ic_shedule" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
